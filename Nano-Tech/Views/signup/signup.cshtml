@model Nano_Tech.Models.user
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" type="text/css" href="~/Content/loginstyle.css" />

    <title>User SIGNUP</title>
</head>
<body>
    <h2>User Signup</h2>
    @using (Html.BeginForm("adduser","signup", FormMethod.Post))
    {
        <div class="login">
            <form id="login" action="" method="post">


                @*<h5 style="color:red;">@ViewBag.msg</h5>*@
                <label for="uname"><b>Username</b></label>
                @*<input type="text" placeholder="Enter Username" name="uname" required>*@
                @Html.TextBoxFor(x => x.username, new { @class = "form-control", @placeholder = "User Name", @id = "Uname" })
                <span style="color:red">@Html.ValidationMessageFor(x => x.username)</span>

                <br />
                <label for="psw"><b>Password</b></label>
                @*<input type="password" placeholder="Enter Password" name="psw" required>*@

                @Html.PasswordFor(x => x.userpass, new { @class = "form-control", @placeholder = "Password", @id = "Pass" })
                <span style="color:red">@Html.ValidationMessageFor(x => x.userpass)</span>

                <br />

                <label for="psw"><b>Contact</b></label>
                @*<input type="password" placeholder="Enter Password" name="psw" required>*@

                @Html.TextBoxFor(x => x.usercontact, new { @class = "form-control", @placeholder = "Password", @id = "Uname" })
                <span style="color:red">@Html.ValidationMessageFor(x => x.usercontact)</span>

                <br />

                <label for="psw"><b>Email</b></label>
                @*<input type="password" placeholder="Enter Password" name="psw" required>*@

                @Html.TextBoxFor(x => x.useremail, new { @class = "form-control", @placeholder = "Password", @id = "Uname" })
                <span style="color:red">@Html.ValidationMessageFor(x => x.useremail)</span>

                <br />
                <div class="row">
                    <input type="submit" value="Signup" id="log" class="btn btn-success" />
                </div>


                <div class="form-group">
                    <p style="color:red">@ViewBag.error</p>
                </div>
            </form>
        </div>

    }
</body>
</html>
<script src="~/Scripts/jquery.validate-vsdoc.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
@section Scripts
    {


    @Scripts.Render("~/bundles/jqueryval")
}