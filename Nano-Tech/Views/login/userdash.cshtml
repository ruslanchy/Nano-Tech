</head>

<body>
    <div class="container">
        <div class="topbar">
            <div class="logo">
                <h3>Welcome @Session["useremail"]</h3>
            </div>

            
                <div class="user">
                    <button class="btn-danger" onclick="location.href='@Url.Action("Index", "Home")'">Home</button>
                </div>
        </div>
        @{
            if (@Session["useremail"]!= null)
            {
                <div class="sidebar">
                    <ul>
                        <li>
                            <a href="#">
                                <i class="fas fa-chart-bar"></i>
                                <div>My Orders</div>
                            </a>
                        </li>
                        <li>
                            <a href="../login/viewprofile">
                                <i class="fas fa-user"></i>
                                <div>Edit profile</div>
                            </a>
                        </li>
                        </div>
                       
            }
            else
            {
                
            }
        }




</body>

</html>